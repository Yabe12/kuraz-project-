generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Student {
  id           Int      @id @default(autoincrement())
  name         String
  email        String
  linkedin     String
  github       String
  resume        String
  createdAt    DateTime @default(now())
}

model Internship {
  id                Int      @id @default(autoincrement())
  companyName       String
  courseUrl         String
  telegramChannel   String
  registrationDeadline DateTime
}

model Question {
  id        Int      @id @default(autoincrement())
  studentId Int
  question  String
  answer    String?
}
